<div class="container">
  <div class="row">
    <div class="col-sm-offset-3 col-sm-6">
      <h1 class="header"><%= t('new_driver.new_driver') %></h1>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-offset-3 col-sm-6">
      <%= form_for @new_driver, url: {action: "create"}, html: {class: "form"} do |f| %>

        <%= f.label :name, t('new_driver.name') %>
        <%= f.text_field :name %>
        <br />
        <%= f.label :email, t('new_driver.email') %>
        <%= f.text_field :email %>
        <br />
        <%= f.label :phone_number, t('new_driver.phone_number') %>
        <%= f.text_field :phone_number %>
        <%# TODO BEFORE DELIVERY: translate submit button%>
        <%= f.submit t('new_driver.submit') %>
        <%= t('new_driver.disclaimer') %>
      <% end %>
    </div>
  </div>
</div>